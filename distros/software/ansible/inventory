[example] #name of the group of servers
192.168.XXX.XXX #IP address of the servers you want to be in the inventory
www.example.com #Hostname of the servers you want to be in the inventory

------------------------------------------------------------------------------------------------------------------------------------------------------------------------
------------------------------------------------------------------------------------------------------------------------------------------------------------------------

#Command to tell ansible where the inventory file is
ansible -i /path/to/file example -m ping -u userName

# 'ansible' - command to state what program
# '-i' - tell ansible look for inventory file
# /path/to/file - path to the inventory file
# 'example' - group name of inventory
# '-m' - module ???
# 'ping' - ping the servers in the group
# '-u' - use the user
# 'userName' - the user name for the '-u' use user command
